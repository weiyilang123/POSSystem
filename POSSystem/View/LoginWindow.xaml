<Window x:Class="POSSystem.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSSystem.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="350" Width="500">
    <Grid Background="#FF84F9DC">

        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Margin="204,134,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="167" Height="25"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="107,134,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="107,199,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="204,199,0,0" VerticalAlignment="Top" Width="167" Height="25"/>
        <Button Content="Sign in" IsDefault="True" HorizontalAlignment="Left" Margin="204,256,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="wrongAuthMesaage" Content="" HorizontalAlignment="Left" Margin="91,85,0,0" VerticalAlignment="Top" Width="323" Height="27" FontSize="10" Foreground="Red" Background="{x:Null}"/>

    </Grid>
</Window>
